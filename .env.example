# Copy to .env and fill in. Do not commit .env (secrets).

# --- Events API ---
GOOGLE_CALENDAR_ICAL_URL=

# --- Contact form email ---
# Address that receives contact form submissions (required for /api/contact)
CONTACT_EMAIL=

# Option A: Gmail SMTP (use App Password with 2FA enabled)
SMTP_USER=
SMTP_PASS=

